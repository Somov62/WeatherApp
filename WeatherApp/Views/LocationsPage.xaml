<Page
    x:Class="WeatherApp.Views.LocationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WeatherApp.Resources.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WeatherApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    FontFamily="pack://application:,,,/Resources/Font/#Klukva"
    mc:Ignorable="d"
    MouseDown="Page_MouseDown">

    <Grid>
        <StackPanel>
            <controls:CustomTextBox
                Text=""
                CornerRadius="20"
                PlaceHolder="Найти любую точку на планете"
                PlaceHolderColor="Gray"
                Style="{DynamicResource SearchTextBoxStyle}" />
        </StackPanel>
    </Grid>
</Page>
