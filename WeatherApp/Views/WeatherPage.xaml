<Page
    x:Class="WeatherApp.Views.WeatherPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:WeatherApp.Resources.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:exct="clr-namespace:WeatherApp.Resources.Controls"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WeatherPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    xml:lang="ru-RU"
    Background="{DynamicResource PageBackgroud}"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:WeatherCodeToIconConverter x:Key="WeatherCodeToIconConverter" />
        <converters:WeatherLocalizationConverter x:Key="LocalizationConverter" />
    </Page.Resources>


    <ScrollViewer x:Name="outsideScrollView" VerticalScrollBarVisibility="Hidden">
        <StackPanel>

            <DockPanel LastChildFill="False">
                <Button
                    Width="35"
                    Padding="7"
                    HorizontalAlignment="Right"
                    Background="White"
                    Command="{Binding RefreshDataCommand}"
                    Style="{StaticResource WindowNavButtonStyle}">
                    <fa:ImageAwesome
                        Foreground="#333333"
                        Icon="Refresh"
                        Spin="{Binding IsRefreshing}"
                        SpinDuration="2"
                        Stretch="Fill" />
                </Button>
                <TextBlock
                    VerticalAlignment="Bottom"
                    DockPanel.Dock="Right"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="{Binding Forecast.EndDate, StringFormat='m'}" />
                <TextBlock
                    VerticalAlignment="Bottom"
                    DockPanel.Dock="Right"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="{Binding Forecast.StartDate, StringFormat='Прогноз погоды {0:m} - '}" />


            </DockPanel>

            <Grid Margin="0,10,0,0" DataContext="{Binding SelectedForecast}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <Border
                    MinHeight="350"
                    Background="White"
                    CornerRadius="10">
                    <Grid
                        MinWidth="130"
                        MinHeight="100"
                        Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <TextBlock FontSize="14" Text="{Binding Date, StringFormat='m'}" />

                        <StackPanel
                            Grid.Row="1"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal">
                            <TextBlock FontSize="40" Text="{Binding MaxTemperature}" />

                            <TextBlock
                                Margin="15,0,0,0"
                                VerticalAlignment="Bottom"
                                FontSize="20"
                                Text="{Binding MinTemperature}" />
                        </StackPanel>

                        <TextBlock
                            Grid.Row="2"
                            FontSize="14"
                            Text="{Binding Weather, Converter={StaticResource LocalizationConverter}}" />
                    </Grid>
                </Border>


                <Border
                    Grid.Column="2"
                    MinHeight="350"
                    Background="White"
                    CornerRadius="10">

                    <Control HorizontalAlignment="Left" Template="{StaticResource overcast}" />
                </Border>
            </Grid>

            <Grid
                Grid.Row="2"
                Grid.ColumnSpan="3"
                Margin="50,30">

                <ListView
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Stretch"
                    exct:ScrollViewerHelper.ShiftWheelScrollsHorizontally="True"
                    Background="{Binding Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Page}}}"
                    BorderThickness="0"
                    ItemContainerStyle="{DynamicResource ListViewItemContainerStyle1}"
                    ItemsSource="{Binding Forecast.DayForecasts}"
                    MouseWheel="ListView_MouseWheel"
                    ScrollViewer.CanContentScroll="False"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    SelectedItem="{Binding SelectedForecast}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>


                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid MouseWheel="ListView_MouseWheel">
                                <Grid
                                    MinWidth="130"
                                    MinHeight="100"
                                    Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="68" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock FontSize="14" Text="{Binding Date, StringFormat='m'}" />

                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal">
                                        <TextBlock FontSize="40" Text="{Binding MaxTemperature}" />

                                        <TextBlock
                                            Margin="15,0,0,0"
                                            VerticalAlignment="Bottom"
                                            FontSize="20"
                                            Opacity="0.6"
                                            Text="{Binding MinTemperature}" />
                                    </StackPanel>

                                    <Grid Grid.Column="1" Margin="0,0,0,-20">
                                        <Control
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Template="{Binding Weather, Converter={StaticResource WeatherCodeToIconConverter}}" />
                                    </Grid>

                                    <TextBlock
                                        Grid.ColumnSpan="2"
                                        Grid.Row="1"
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Bottom"
                                        FontSize="14"
                                        Text="{Binding Weather, Converter={StaticResource LocalizationConverter}}" />
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>


            <Border
                Grid.Row="3"
                Height="500"
                Background="White"
                CornerRadius="10" />
        </StackPanel>
    </ScrollViewer>

</Page>
