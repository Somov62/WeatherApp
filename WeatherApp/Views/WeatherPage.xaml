<Page
    x:Class="WeatherApp.Views.WeatherPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:exct="clr-namespace:WeatherApp.Resources.Controls"
    xmlns:local="clr-namespace:WeatherApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WeatherPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource PageBackgroud}"
    mc:Ignorable="d">

    <ScrollViewer
        x:Name="outsideScrollView"
        ScrollChanged="ScrollViewer_ScrollChanged"
        VerticalScrollBarVisibility="Hidden">
        <StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <Border
                    MinHeight="350"
                    Background="White"
                    CornerRadius="10" />

                <Border
                    Grid.Column="2"
                    MinHeight="350"
                    Background="White"
                    CornerRadius="10" />
            </Grid>

            <Grid
                Grid.Row="2"
                Grid.ColumnSpan="3"
                Margin="50,30">

                <ListView
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Stretch"
                    exct:ScrollViewerHelper.ShiftWheelScrollsHorizontally="True"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemContainerStyle="{DynamicResource ListViewItemContainerStyle1}"
                    ItemsSource="{Binding WeatherDays}"
                    ScrollViewer.CanContentScroll="False"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    ScrollViewer.ScrollChanged="ListView_ScrollChanged"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>


                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                MinWidth="100"
                                MinHeight="100"
                                MouseWheel="ListView_MouseWheel">
                                <TextBlock IsHitTestVisible="True" Text="{Binding}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>


            <Border
                Grid.Row="3"
                Height="500"
                Background="White"
                CornerRadius="10" />
        </StackPanel>
    </ScrollViewer>

</Page>
