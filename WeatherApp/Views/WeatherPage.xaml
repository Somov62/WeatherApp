<Page
    x:Class="WeatherApp.Views.WeatherPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:WeatherApp.Resources.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:exct="clr-namespace:WeatherApp.Resources.Controls"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="page"
    Title="WeatherPage"
    Background="{DynamicResource PageBackground}"
    FontFamily="pack://application:,,,/Resources/Font/#Klukva"
    d:DesignHeight="450"
    d:DesignWidth="800"
    xml:lang="ru-RU"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:WeatherCodeToIconConverter x:Key="WeatherCodeToIconConverter" />
        <converters:WeatherLocalizationConverter x:Key="LocalizationConverter" />
        <converters:DaysLocalizationConverter x:Key="DaysLocalizationConverter" />
        <converters:WeekendHighlightConverter x:Key="WeekendHighlightConverter" />
        <converters:MeasuresConverter x:Key="MeasuresConverter" />
        <converters:WindConverter x:Key="WindConverter" />
        <converters:WindToTextConverter x:Key="WindToTextConverter" />
        <converters:ForecastPanelConverter x:Key="ForecastPanelConverter" />
    </Page.Resources>


    <ScrollViewer x:Name="outsideScrollView" VerticalScrollBarVisibility="Hidden">
        <StackPanel>

            <DockPanel LastChildFill="False">
                <Button
                    Background="White"
                    Width="35"
                    Padding="7"
                    HorizontalAlignment="Right"
                    Command="{Binding RefreshDataCommand}"
                    Style="{StaticResource WindowNavButtonStyle}">
                    <fa:ImageAwesome
                        Foreground="#333333"
                        Icon="Refresh"
                        Spin="{Binding IsRefreshing}"
                        SpinDuration="2"
                        Stretch="Fill" />
                </Button>
                <TextBlock
                    Text="{Binding Forecast.EndDate, StringFormat='m'}"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="SemiBold"
                    VerticalAlignment="Bottom"
                    DockPanel.Dock="Right" />
                <TextBlock
                    Text="{Binding Forecast.StartDate, StringFormat='Прогноз погоды {0:m} - '}"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="SemiBold"
                    VerticalAlignment="Bottom"
                    DockPanel.Dock="Right" />


            </DockPanel>

            <Grid Margin="3,10,0,0" DataContext="{Binding SelectedForecast}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="600" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Background="White"
                    MinHeight="350"
                    HorizontalAlignment="Stretch"
                    CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="7"
                            Opacity="0.5"
                            ShadowDepth="4"
                            Color="#38434D" />
                    </Border.Effect>
                </Border>
                <Border MinHeight="350" CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush SpreadMethod="Repeat" StartPoint="0, 0" EndPoint="0, 1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="0" Color="#FFFFFF" />
                                <GradientStop Offset="1.3" Color="#D7E1EC" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Border.Background>
                    <DockPanel Margin="30,20" LastChildFill="False">
                        <Grid
                            Margin="-150,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            DockPanel.Dock="Right">
                            <Control Template="{Binding Weather, Converter={StaticResource WeatherCodeToIconConverter}}">
                                <Control.RenderTransform>
                                    <ScaleTransform ScaleX="3" ScaleY="3" />
                                </Control.RenderTransform>
                            </Control>
                        </Grid>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                            <TextBlock
                                Text="{Binding Date, Converter={StaticResource DaysLocalizationConverter}, StringFormat='\{0} - '}"
                                FontSize="20"
                                DockPanel.Dock="Top" />
                            <TextBlock
                                Text="{Binding Date, StringFormat='m'}"
                                FontSize="20"
                                DockPanel.Dock="Top" />
                        </StackPanel>
                        <TextBlock
                            Text="Location"
                            FontSize="22"
                            DockPanel.Dock="Top" />

                        <StackPanel
                            Orientation="Horizontal"
                            Margin="0,5,0,5"
                            DockPanel.Dock="Top">
                            <TextBlock
                                Text="{Binding MaxTemperature, StringFormat='\{0}°'}"
                                FontSize="45"
                                Margin="0,0,0,-5"
                                VerticalAlignment="Bottom" />
                            <StackPanel Margin="12,-15,0,0" VerticalAlignment="Bottom">
                                <TextBlock
                                    Text="Ночью"
                                    FontSize="14"
                                    HorizontalAlignment="Center" />
                                <TextBlock
                                    Text="{Binding MinTemperature, StringFormat='\{0}°'}"
                                    FontSize="20"
                                    Margin="-2,-2,0,0" />
                            </StackPanel>
                        </StackPanel>

                        <TextBlock
                            Text="{Binding Weather, Converter={StaticResource LocalizationConverter}}"
                            Grid.Row="2"
                            FontSize="22"
                            DockPanel.Dock="Top" />


                        <StackPanel
                            Orientation="Horizontal"
                            Margin="0,-5,0,10"
                            DockPanel.Dock="Top">
                            <Control
                                Margin="0,15,0,0"
                                VerticalAlignment="Bottom"
                                Template="{StaticResource wind}" />
                            <TextBlock
                                Text="{Binding WindSpeed}"
                                FontSize="30"
                                Margin="15,0,0,0"
                                VerticalAlignment="Bottom" />
                            <TextBlock
                                Text="{Binding ElementName=page, Path=DataContext.Forecast.Measures.Windspeed, Converter={StaticResource MeasuresConverter}}"
                                FontSize="22"
                                Margin="5,13,0,0"
                                VerticalAlignment="Bottom" />

                            <StackPanel Margin="10,0,0,-1" VerticalAlignment="Bottom">
                                <TextBlock Text="Порывы до" FontSize="14" />
                                <TextBlock
                                    Text="{Binding WindGusts}"
                                    FontSize="20"
                                    Margin="0,-2,0,0"
                                    HorizontalAlignment="Center" />
                            </StackPanel>

                            <Path
                                Stroke="Gray"
                                StrokeThickness="3"
                                Margin="30,30,0,0"
                                VerticalAlignment="Center"
                                Data="M 10 0 L -5 6 L -1.5 0 L -5 -6 Z"
                                Fill="Gray"
                                StrokeEndLineCap="Round"
                                StrokeLineJoin="Round"
                                StrokeStartLineCap="Round">
                                <Path.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1" ScaleY="1" />
                                        <RotateTransform Angle="{Binding WindDirection, Converter={StaticResource WindConverter}}" />
                                    </TransformGroup>
                                </Path.RenderTransform>
                            </Path>

                            <TextBlock
                                Text="{Binding Path=WindDirection, Converter={StaticResource WindToTextConverter}}"
                                FontSize="22"
                                Margin="10,20,0,0"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                            <TextBlock
                                Text="Осадки: "
                                FontSize="20"
                                DockPanel.Dock="Top" />
                            <TextBlock
                                Text="{Binding SumPrecipitation}"
                                FontSize="20"
                                DockPanel.Dock="Top" />
                            <TextBlock
                                Text="{Binding ElementName=page, Path=DataContext.Forecast.Measures.PrecipitationSum, Converter={StaticResource MeasuresConverter}}"
                                FontSize="20"
                                Margin="5,0"
                                VerticalAlignment="Bottom" />
                        </StackPanel>

                        <Border
                            Background="Blue"
                            Height="2"
                            Margin="40,0"
                            CornerRadius="1"
                            DockPanel.Dock="Bottom" />
                    </DockPanel>
                </Border>


                <Border
                    Grid.Column="2"
                    Background="White"
                    MinHeight="350"
                    CornerRadius="10" />
            </Grid>

            <Grid
                Grid.Row="2"
                Grid.ColumnSpan="3"
                Margin="50,30">

                <ScrollViewer
                    exct:ScrollViewerHelper.ShiftWheelScrollsHorizontally="True"
                    CanContentScroll="True"
                    HorizontalScrollBarVisibility="Hidden"
                    VerticalScrollBarVisibility="Disabled">
                    <ItemsControl
                        Name="panel"
                        ItemsSource="{Binding Forecast.DayForecasts}"
                        Background="{Binding Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Page}}}"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Stretch"
                        MouseWheel="ListView_MouseWheel">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>


                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton
                                    Name="rb"
                                    Command="{Binding DataContext.SelectForecastCommand, ElementName=panel}"
                                    CommandParameter="{Binding}"
                                    GroupName="g1"
                                    IsChecked="{Binding DataContext, ElementName=panel, Converter={StaticResource ForecastPanelConverter}, ConverterParameter={x:Reference x}, Mode=OneTime}"
                                    MouseWheel="ListView_MouseWheel"
                                    Style="{StaticResource ForecastPanelRadiButton}">

                                    <Grid
                                        x:Name="x"
                                        MinWidth="130"
                                        MinHeight="120"
                                        Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="52" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="70" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <TextBlock Text="{Binding Date, StringFormat='m'}" FontSize="16" />
                                            <TextBlock
                                                Text="{Binding Date, Converter={StaticResource DaysLocalizationConverter}, ConverterParameter='a'}"
                                                Foreground="{Binding Date, Converter={StaticResource WeekendHighlightConverter}}"
                                                FontSize="25" />
                                        </StackPanel>

                                        <StackPanel
                                            Orientation="Horizontal"
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            VerticalAlignment="Top">


                                            <TextBlock Text="{Binding MaxTemperature}" FontSize="40" />

                                            <TextBlock
                                                Text="{Binding MinTemperature}"
                                                FontSize="20"
                                                Margin="15,0,0,0"
                                                VerticalAlignment="Bottom"
                                                Opacity="0.6" />
                                        </StackPanel>

                                        <Grid Grid.Column="1" Margin="0,0,0,-20">
                                            <Control
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top"
                                                Template="{Binding Weather, Converter={StaticResource WeatherCodeToIconConverter}}" />
                                        </Grid>

                                        <TextBlock
                                            Text="{Binding Weather, Converter={StaticResource LocalizationConverter}}"
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            FontSize="14"
                                            Margin="0,5,0,0"
                                            VerticalAlignment="Bottom" />
                                    </Grid>
                                </RadioButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>


            <Border
                Grid.Row="3"
                Background="White"
                Height="500"
                CornerRadius="10" />
        </StackPanel>
    </ScrollViewer>

</Page>
